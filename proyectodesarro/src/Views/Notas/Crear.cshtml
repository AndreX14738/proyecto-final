@model proyectodesarro.Models.Nota

@{
    ViewData["Title"] = Model.Id == 0 ? "Registrar Nota" : "Editar Nota";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="@(Model.Id == 0 ? "Crear" : "Editar")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EstudianteId" value="@ViewBag.EstudianteId" />
            
            <div class="form-group mb-3">
                <label asp-for="Materia" class="control-label"></label>
                <input asp-for="Materia" class="form-control" />
                <span asp-validation-for="Materia" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" class="form-control" placeholder="Ejemplo: 2025-1" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" max="100" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="control-label"></label>
                <textarea asp-for="Observaciones" class="form-control"></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" asp-route-estudianteId="@ViewBag.EstudianteId" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
