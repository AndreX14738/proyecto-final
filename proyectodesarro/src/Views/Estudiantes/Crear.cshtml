@model proyectodesarro.Models.Estudiante

@{
    ViewData["Title"] = Model.Id == 0 ? "Registrar Estudiante" : "Editar Estudiante";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="@(Model.Id == 0 ? "Crear" : "Editar")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Apellidos" class="control-label">Apellidos</label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Correo" class="control-label">Correo Electr칩nico</label>
                <input asp-for="Correo" class="form-control" type="email" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="DocumentoIdentidad" class="control-label">Documento de Identidad</label>
                <input asp-for="DocumentoIdentidad" class="form-control" />
                <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Grado" class="control-label">Grado</label>
                <input asp-for="Grado" class="form-control" />
                <span asp-validation-for="Grado" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Seccion" class="control-label">Secci칩n</label>
                <input asp-for="Seccion" class="form-control" />
                <span asp-validation-for="Seccion" class="text-danger"></span>
            </div>

            <!-- Nuevos campos -->
            <div class="form-group mb-3">
                <label asp-for="DocenteId" class="control-label">Docente</label>
                <select asp-for="DocenteId" class="form-control" asp-items="ViewBag.Docentes"></select>
                <span asp-validation-for="DocenteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Materia" class="control-label">Materia</label>
                <select asp-for="Materia" class="form-control">
                    <option value="">Seleccione una materia</option>
                    <option value="Matem치ticas">Matem치ticas</option>
                    <option value="Lenguaje">Lenguaje</option>
                    <option value="Ciencias">Ciencias</option>
                    <option value="Historia">Historia</option>
                </select>
                <span asp-validation-for="Materia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AsistenciaInicial" class="control-label">Asistencia Inicial</label>
                <select asp-for="AsistenciaInicial" class="form-control">
                    <option value="Presente">Presente</option>
                    <option value="Ausente">Ausente</option>
                    <option value="Tardanza">Tardanza</option>
                    <option value="Justificado">Justificado</option>
                </select>
                <span asp-validation-for="AsistenciaInicial" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NotaInicial" class="control-label">Nota Inicial</label>
                <input asp-for="NotaInicial" class="form-control" type="number" min="0" max="20" step="0.1" />
                <span asp-validation-for="NotaInicial" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                    <option value="Graduado">Graduado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
